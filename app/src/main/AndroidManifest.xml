<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.faisal.servicessamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartedServiceActivity" />
        <activity android:name=".BoundServicesActivity" />
        <activity android:name=".IntentServiceActivity" />

        <service android:name=".StartedService" />
        <service android:name=".BoundService" />

        <!--
            by making it false now you can only access from
             inside the application else it will be accessible from outside the app
        -->
        <service
            android:name=".MyIntentService"
            android:exported="false" />

        <activity android:name=".JobSchedulerActivity"></activity>
    </application>

</manifest>